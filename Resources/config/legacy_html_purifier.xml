<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service public="false" id="Exercise\HTMLPurifierBundle\CacheWarmer\SerializerCacheWarmer" class="Exercise\HtmlPurifierBundle\CacheWarmer\SerializerCacheWarmer">
            <argument>%exercise_html_purifier.cache_warmer.serializer.paths%</argument>
            <argument type="service" id="exercise_html_purifier.default" />
            <tag name="kernel.cache_warmer" />
        </service>

        <service public="false" id="Exercise\HTMLPurifierBundle\Form\TypeExtension\HtmlPurifierTextTypeExtension" class="Exercise\HtmlPurifierBundle\Form\TypeExtension\HtmlPurifierTextTypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\TextType" />
        </service>

        <service public="false" id="Exercise\HTMLPurifierBundle\Twig\HTMLPurifierExtension" class="Exercise\HTMLPurifierBundle\Twig\HTMLPurifierExtension">
            <tag name="twig.extension" />
        </service>

        <service public="false" id="Exercise\HTMLPurifierBundle\Twig\HTMLPurifierRuntime" class="Exercise\HTMLPurifierBundle\Twig\HTMLPurifierRuntime">
            <tag name="twig.runtime" />
        </service>
    </services>
</container>
