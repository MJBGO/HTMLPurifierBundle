<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="false" autowire="true" autoconfigure="true" />

        <service id="Exercise\HTMLPurifierBundle\CacheWarmer\SerializerCacheWarmer">
            <argument key="$paths">%exercise_html_purifier.cache_warmer.serializer.paths%</argument>
        </service>

        <service id="Exercise\HTMLPurifierBundle\Form\TypeExtension\HTMLPurifierTextTypeExtension">
            <tag name="form.type_extension" extended-type="Symfony\Component\Form\Extension\Core\Type\TextType" />
        </service>

        <service id="Exercise\HTMLPurifierBundle\Twig\HTMLPurifierExtension" />

        <service id="Exercise\HTMLPurifierBundle\Twig\HTMLPurifierRuntime" />
    </services>
</container>
